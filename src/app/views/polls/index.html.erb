<h1>Listing polls</h1>
 
 
<p>
  <b> Select an event corresponding to a course</b><br>
          <%= render :partial => 'eventselection' %>    
</p>


<table>
  <tr>
    <th>Name</th>
    <th>Title</th>
    <th>Content</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
 
<% @polls.each do |poll| %>
  <tr>
    <td><%= poll.questiontext %></td>
    <td><%= link_to 'Show', poll %></td>
    <td><%= link_to 'Edit', edit_poll_path(poll) %></td>
    <td><%= link_to 'Destroy', poll, :confirm => 'Are you sure?',
                                     :method => :delete %></td>
  </tr>
<% end %>
</table>
 
