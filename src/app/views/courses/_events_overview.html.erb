<div style="overflow:hidden; -webkit-transition: all .5s ease; -moz-transition: all .5s ease; transition: all .5s ease;" id="course_events">

<% if @events.count == 0 %>  
   No events, yet.


<% else %> 
	<table class="table announcement-teaser pink-teaser">
    <tr>
      <th> Event </th>
      <th> Tutor </th>
      <th> Datum </th>
      <th> Ort   </th>
      <th> Action   </th>
    </tr>
  <% @events.first(5).each do |event| %>
    <tr>
      <td><%= event.event_type      ? event.event_type : " - " %></td>
      <td><%= event.tutor.full_name ? event.tutor.full_name : " - "  %></td>
      <td><%= event.beginDate %> <br> <%= event.endDate %></td>
      <td><%= event.building        ? event.building : " - " %> 
          <%= event.room            ? event.room : " - " %></td>
      <td>
        <small>
          <% if can? :manage, @course %>
            <b class="icon-question-sign">&nbsp;<%= link_to "add poll", new_poll_path %></b>
            <b class="icon-edit">&nbsp;<%= link_to "edit", edit_event_path(event) %></b>
            <b class="icon-trash">&nbsp;<%= link_to 'delete', event, confirm: 'Are you sure?', method: :delete %></b>
          <% end %>
            <b>&nbsp;<%= link_to "view", event_path(event) %></b>
        </small>
      </td>
		</tr>  
  <% end %>
</table>
<% end %>

</div>

