<%= form_for(@poll_result) do |f| %>
  <% if @poll_result.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@poll_result.errors.count, "error") %> prohibited this poll_result from being saved:</h2>
      <ul>
      <% @poll_result.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
	<%= f.hidden_field :userId, :value => params[:userId]%>
	<%= f.hidden_field :questionId, :value => params[:questionId]%>
	<div class="control-group">
	<legend><%= @p.questiontext %></legend>
	<% @p.choices.each do |c|  %>
		<div class="controls">
			<%= radio_button_tag( :choiceId, c.id) %>
			<%= c.answertext  %>	
		</div>
	<%end%>
	</div>
	<div class="actions">
		<%= f.submit "answer question", { :class => 'btn btn-primary' } %>
	</div>
<% end %>
